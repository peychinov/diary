%div{style: 'width: 70%; float: left;'}
  = render 'form'

%div{style: 'width: 30%; float: left;'}
  = render partial: '/tag_cloud'

%div{style: 'clear: both'}
  %h1 Entries
  %table
    %thead
      %tr
        %th{style: 'width: 70px'} Date
        %th Priority
        %th Tags
        %th Content
        %th
        %th
        %th
    %tbody
      - @entries.each do |entry|
        %tr{ class: cycle("odd", "even") }
          %td{style: 'text-align: center'}= entry.happened_on
          %td{style: 'text-align: center'}= entry.priority
          %td
            - entry.tags.each do |tag|
              = link_to tag.name, tag_path(tag.name)
          %td= entry.content
          %td= link_to 'Show', entry
          %td= link_to 'Edit', edit_entry_path(entry)
          %td= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }
